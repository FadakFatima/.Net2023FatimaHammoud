@model CartViewModel

@{
    ViewData["Title"] = "Cart OverView";
}



@if (Model.CartItems.Count > 0)
{
    <h1>Cart OverView</h1>
    <div class="cartWrapper" >
        <div class="cartbg d-none">
            <h3 class="text-center" >Redirecting you to paypal...</h3>
            <img src="~/images/ajax.gif" />
        </div>
        <table class="table">
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th></th>
                <th>Price</th>
                <th>Total</th>
            </tr>

            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a asp-action="Add" asp-route-id="@item.ProductId"
                           class="btn btn-sm btn-primary">+</a>
                        <a asp-action="Decrease" asp-route-id="@item.ProductId"
                           class="btn btn-sm btn-success">-</a>
                        <a asp-action="Remove" asp-route-id="@item.ProductId"
                           class="btn btn-sm btn-danger">Remove</a>
                    </td>
                    <td>@item.Price.ToString("C2")</td>
                    <td>
                        @Model.CartItems.Where( x =>
                        x.ProductId ==
                        item.ProductId).Sum(
                        x => x.Quantity * x.Price).ToString("C2")
                    </td>

                </tr>
            }

            <tr>
                <td class="text-right" colspan="4">
                    Grand Total:
                    @Model.GrandTotal.ToString("C2")
                </td>
            </tr>

            <tr>
                <td class="text-right" colspan="4">
                    Grand Total:
                    @Model.GrandTotal.ToString("C2")
                </td>
            </tr>

            <tr>
                <td class="text-right" colspan="4">
                    <a asp-action="Clear"
                       class="btn btn-danger">Clear Cart</a>
                    <br />
                    <br />
                    <a href="#" class="btn btn-primary checkout">Checkout</a>
                </td>

            </tr>
        </table>
        <div>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#rateModal">
                Rate Us
            </button>
        </div>

        <div class="modal fade" id="rateModal" tabindex="-1" aria-labelledby="rateModalLabel" aria-hidden="false">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="rateModalLabel">Rate Content</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">rate</button>
                    </div>
                    <div class="modal-body">
                        <form action="/RateContent" method="post">
                            <input type="hidden" name="contentId" value="123" />
                            <label for="rating">Rating:</label>
                            <input type="number" name="rating" min="1" max="5" />
                            <button type="submit" id="submitRating">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
    
}
else
{
    <h3 class="display-4 text-center">Your cart is empty.</h3>
}
<partial name="~/Views/Cart/_PaypalPartial.cshtml" for="CartItems" />

@section Scripts{
    <script>
        $(function () {

            $("a.checkout").click(function (e) {
                e.preventDefault();

                $("div.cartbg").removeClass("d-none");

                $.get("/cart/clear", {}, function(){
                    $("form.paypalform").submit();
                })
               
            });
        });
        $(document).ready(function () {
            $('#ratingInput').rating();

            $('#submitRating').click(function () {
                var contentId = @Model.CartItems; 
                var rating = $('#ratingInput').val();

                $.ajax({
                    type: 'POST',
                    url: '/cart/RateContent', // Replace with your controller action URL
                    data: { contentId: contentId, rating: rating },
                    success: function (data) {
                        // Handle success (e.g., update average rating and number of ratings on the page)
                    },
                    error: function (error) {
                        // Handle error
                    }
                });
            });
        });

    </script>

}